myModule Program

def readName():
    return input('Enter name: ')

def readScore():
    score1 = int(input("Enter test score: "))
    score2 = int(input("Enter test score: "))
    score3 = int(input("Enter test score: "))
    return score1, score2, score3

def formattedPrint(name, score1, score2, score3, testAverage):
    print("\nName:",name, "\t1:",score1, "\t2:", score2, "\t3:", score3, "\tAvg:", testAverage)


